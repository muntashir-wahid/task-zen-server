generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tasks {
  uid              String       @id @default(uuid())
  clientName       String
  assigneeName     String
  description      String
  status           TaskStatuses @default(TO_DO)
  totalAttachments Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tasks")
}

enum TaskStatuses {
  INCOMPLETE
  TO_DO
  UNDER_REVIEW
  COMPLETED
  OVERDUE
}
